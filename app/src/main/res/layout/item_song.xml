<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/song_track_n"
        android:maxLines="1"
        style="@style/TextAppearance.Material3.LabelMedium"
        android:layout_marginStart="@dimen/item_list_lateral"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/song_title"
        android:maxLines="1"
        style="@style/TextAppearance.Material3.LabelLarge"
        android:layout_marginStart="@dimen/item_list_lateral"
        android:layout_marginBottom="@dimen/item_list_lateral"
        app:layout_constraintStart_toEndOf="@id/song_track_n"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/song_subtitle"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/song_subtitle"
        style="@style/TextAppearance.Material3.LabelMedium"
        android:layout_marginStart="@dimen/item_list_lateral"
        app:layout_constraintStart_toEndOf="@id/song_track_n"
        app:layout_constraintTop_toBottomOf="@id/song_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/song_duration"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/song_count"
        android:maxLines="1"
        style="@style/TextAppearance.Material3.LabelSmall"
        android:layout_margin="@dimen/item_list_lateral"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/song_duration"
        android:maxLines="1"
        style="@style/TextAppearance.Material3.LabelSmall"
        android:layout_margin="@dimen/item_list_lateral"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
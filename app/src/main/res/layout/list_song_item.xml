<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:background="?selectableItemBackground">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/itemN"
        android:gravity="center_horizontal"
        android:minWidth="@dimen/default_extra_big_margin"
        android:singleLine="true"
        android:focusable="false"
        android:clickable="false"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/itemTitle"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:focusable="false"
        android:clickable="false"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintStart_toEndOf="@id/itemN"
        app:layout_constraintEnd_toStartOf="@id/itemIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/itemDescription"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/itemDescription"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:focusable="false"
        android:clickable="false"
        app:layout_constraintStart_toEndOf="@id/itemN"
        app:layout_constraintEnd_toStartOf="@id/itemDescription2"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/itemDescription2"
        android:gravity="end"
        android:singleLine="true"
        android:focusable="false"
        android:clickable="false"
        android:ellipsize="marquee"
        android:textColor="?colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/itemIcon"
        app:layout_constraintTop_toBottomOf="@id/itemTitle"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/itemIcon"
        android:visibility="gone"
        android:focusable="false"
        android:clickable="false"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="ContentDescription"/>

</androidx.constraintlayout.widget.ConstraintLayout>
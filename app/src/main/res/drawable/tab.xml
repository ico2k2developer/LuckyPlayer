<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_selected="true"
        android:state_pressed="false">

        <layer-list>

            <item
                android:gravity="center">

                <shape
                    android:shape="rectangle">

                    <corners
                        android:topLeftRadius="@dimen/default_small_margin"
                        android:topRightRadius="@dimen/default_small_margin"/>

                    <gradient
                        android:angle="270"
                        android:startColor="@color/colorPrimaryDarkRed"
                        android:endColor="@color/colorAccentRed"/>

                </shape>

            </item>

        </layer-list>

    </item>

    <item
        android:state_pressed="true">

        <layer-list>

            <item
                android:gravity="center">

                <shape
                    android:shape="rectangle">

                    <corners
                        android:topLeftRadius="@dimen/default_small_margin"
                        android:topRightRadius="@dimen/default_small_margin"/>

                    <solid
                        android:color="@color/colorAccentRed"/>

                </shape>

            </item>

        </layer-list>

    </item>

    <item
        android:state_selected="false">

        <layer-list>

            <item
                android:gravity="center">

                <shape
                    android:shape="rectangle">

                    <corners
                        android:topLeftRadius="@dimen/default_small_margin"
                        android:topRightRadius="@dimen/default_small_margin"/>

                    <gradient
                        android:angle="270"
                        android:startColor="@color/colorAccentRedTranslucent"
                        android:endColor="@color/colorPrimaryDarkRed"/>

                </shape>

            </item>

        </layer-list>

    </item>

</selector>
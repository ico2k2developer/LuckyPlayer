<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/album_cover"
    android:layout_height="@dimen/album_cover"
    android:layout_margin="@dimen/default_small_margin"
    android:background="@color/panel_background"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info_cover"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info_nocover_label"
        style="?android:attr/textAppearanceMedium"
        android:text="@string/info_nocover"
        android:visibility="gone"
        android:gravity="center"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:id="@+id/info_progress"/>

</LinearLayout>